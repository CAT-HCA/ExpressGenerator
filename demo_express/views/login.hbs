<div>
    <form class="loginForm" id="loginForm">
        <h1 class="h3 mb-3 font-weight-normal">Log in</h1>

        <label for="inputEmail" class="form-control-label">Email Address</label>
        <input type="email" id="inputEmail" class="form-control-input" name="email" placeholder="Email address" required autofocus />
        <label for="inputPassword" class="form-control-label">Password</label>
        <input type="password" id="inputPassword" class="form-control-input" name="password" placeholder="Password" required />

        <button class="btn btn-info" type="submit" id="submitBtn">Log in</button>
    </form>
</div>