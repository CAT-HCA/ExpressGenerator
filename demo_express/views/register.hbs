<div>
    <form class="loginForm" id="loginForm">
        <h1 class="h3 mb-3 font-weight-normal">Register</h1>

        <label for="registerEmail" class="form-control-label">Email Address</label>
        <input type="email" id="registerEmail" class="form-control-input" placeholder="Email address" required autofocus />
        <label for="registerPassword" class="form-control-label">Password</label>
        <input type="password" id="registerPassword" class="form-control-input" placeholder="Password" required />

        <button class="btn btn-info" type="submit" id="registerBtn">Register</button>
    </form>
</div>